{
  "version": 2,
  "builds": [
    {
      "src": "back-end/bin/www",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["back-end/**"]
      }
    },
    {
      "src": "front-end/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back-end/bin/www"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "front-end/dist/$1"
    }
  ],
